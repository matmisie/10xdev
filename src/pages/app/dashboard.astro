---
import AppLayout from "@/layouts/AppLayout.astro";
import { AiFlashcardGenerator } from "@/components/AiFlashcardGenerator";

export const prerender = false;

const { locals } = Astro;
const { user } = locals;

// Middleware should already handle this, but it's good practice
if (!user) {
  return Astro.redirect("/login");
}
---

<AppLayout title="Dashboard | Inteligentne Fiszki">
  <div class="container mx-auto py-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-bold">Witaj w panelu!</h1>
        <p class="text-muted-foreground">Jesteś zalogowany jako: {user.email}</p>
      </div>
      <form action="/api/auth/logout" method="post">
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
          Wyloguj się
        </button>
      </form>
    </div>

    <div class="container mx-auto max-w-2xl py-8">
      <h2 class="mb-4 text-xl font-bold">Generator fiszek</h2>
      <p class="mb-6 text-muted-foreground">
        Wybierz metodę tworzenia nowych fiszek. Możesz skorzystać z pomocy AI, aby automatycznie wygenerować je z Twoich
        notatek, lub dodać je ręcznie.
      </p>
      <AiFlashcardGenerator client:load />
    </div>
  </div>
</AppLayout>

