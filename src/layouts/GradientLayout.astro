---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Inteligentne Fiszki AI" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8"
    >
      <header class="absolute top-4 right-4 sm:top-8 sm:right-8 z-10">
        <div class="flex items-center gap-4">
          <a
            href="/login"
            class="text-white/80 hover:text-white transition-colors duration-300 backdrop-blur-sm bg-white/5 hover:bg-white/10 px-4 py-2 rounded-lg text-sm font-medium"
          >
            Zaloguj się
          </a>
          <a
            href="/register"
            class="text-black bg-white hover:bg-gray-200 transition-colors duration-300 px-4 py-2 rounded-lg text-sm font-bold"
          >
            Utwórz konto
          </a>
        </div>
      </header>
      <main
        class="relative max-w-4xl mx-auto backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 text-white border border-white/10"
      >
        <slot />
      </main>
    </div>
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  body {
    @apply bg-gray-900 text-white;
  }
</style> 