---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Inteligentne Fiszki" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col items-center justify-center bg-background">
    <slot />
  </body>
</html>

